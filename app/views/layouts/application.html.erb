<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= title(@resource_name) %> | AdminBASE Rails 6</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body data-scrollbar-auto-hide="n" class="hold-transition sidebar-mini">
    <div class="wrapper">
      <%= render "layouts/partials/header" %>
      <%= render "layouts/partials/sidebar" %>

      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1 class="m-0"><%= title(@resource_name) %></h1>
              </div><!-- /.col -->
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <% breadcrumb_trail do |crumb| %>
                    <li class="breadcrumb-item <%= crumb.current? ? "active" : "" %>">
                      <%= link_to_unless crumb.current?, crumb.name, crumb.url, (crumb.current? ? {"aria-current" => "page"} : {}) %>
                    </li>
                  <% end %>
                </ol>
              </div><!-- /.col -->
            </div><!-- /.row -->
          </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <div class="content">
          <div class="container-fluid">
            <%= yield %>
          </div>
        </div>
      </div>

      <%= render "layouts/partials/footer" %>
      <%= render "layouts/partials/control_sidebar" %>

      <% unless flash.empty? %>
        <script type="text/javascript">
          <% flash.each do |f| %>
            <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
            toastr['<%= type %>']('<%= f[1] %>');
          <% end %>
        </script>
      <% end %>
    <div>
  </body>
</html>
