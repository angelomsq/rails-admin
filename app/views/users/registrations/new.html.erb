<p class="login-box-msg">Register a new user.</p>

<%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), wrapper: :input_group do |f| %>
  <%#= render "users/shared/error_messages", resource: resource %>
  <%#= f.input :role_id, :as => :hidden, :input_html => { :value => "2" } %>
  <%= f.input :username, class: "form-control", placeholder: "Username", autofocus: true, autocomplete: "username",
    label: false, append: "<span class='fas fa-user'></span>".html_safe %>

  <%= f.input :email, class: "form-control", placeholder: "Email", autocomplete: "email",
    label: false, append: "<span class='fas fa-envelope'></span>".html_safe %>  

  <%= f.input :password, class: "form-control", placeholder: "Password", autocomplete: "new-password",
    label: false, append: "<span class='fas fa-lock'></span>".html_safe %>

  <%= f.input :password_confirmation, class: "form-control", placeholder: "Password Confirmation", autocomplete: "new-password",
    label: false, append: "<span class='fas fa-lock'></span>".html_safe %>

  <div class="row mb-3">
    <div class="col-8">
      <div class="icheck-primary">
        <%= f.input_field :terms, as: :boolean %> 
        <%= f.label :terms do %>
          I agree to the <a href="#">terms</a>
        <% end %>
      </div>
    </div>

    <div class="col-4">
      <%# <button type="submit" class="btn btn-primary btn-block">Sign In</button> %>
      <%= f.submit "Register", class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>
<div class="social-auth-links text-center">
  <p>- OR -</p>
</div>

<%= render "users/shared/links" %>
