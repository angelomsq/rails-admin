<p class="login-box-msg">Change your password</p>

<%= simple_form_for resource, as: resource_name, url: password_path(resource_name), wrapper: :input_group, html: { method: :put } do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <%= f.input :password, class: "form-control", placeholder: "New password", autocomplete: "new-password",
    label: false, append: "<span class='fas fa-lock'></span>".html_safe %>

  <%= f.input :password_confirmation, class: "form-control", placeholder: "Confirm new password", autocomplete: "new-password",
    label: false, append: "<span class='fas fa-lock'></span>".html_safe %>

  <div class="row">
    <div class="col-12">
      <%= f.submit "Change my password", class: "btn btn-primary btn-block" %>
    </div>
    <!-- /.col -->
  </div>
<% end %>
