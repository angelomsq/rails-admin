<div class="card card-outline card-primary">
  <div class="card-header">
    <h3 class="card-title"><%=t "user details" %></h3>
  </div>
  <div class="card-body">
    <p>
      <strong>Username:</strong>
      <%= @user.username %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>

    <p>
      <strong>Role:</strong>
      <%= @user.role.name %>
    </p>
    <%= link_to 'Back', admin_users_path, class: "btn btn-secondary" %>
    <%= link_to 'Edit', edit_admin_user_path(@user), class: "btn btn-success float-right" %>
  </div>

</div>
