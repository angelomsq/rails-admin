
<%= simple_form_for [:admin,@user], wrapper: :input_group do |f| %>
  <div class="card-body">
    <%= f.input :username, class: "form-control" %>
    <%= f.input :email, class: "form-control" %>
    <%= f.input :password, class: "form-control" %>
    <%= f.input :password_confirmation, class: "form-control" %>
    <%= f.association :roles, 
      collection: Role.all.map {|role| [role.name, role.id]}, 
      wrapper: :icheck_collection, 
      as: :check_boxes %>

  
    <%= link_to 'Back', admin_users_path, class: "btn btn-secondary" %>
    <%= f.button :submit, class: "btn btn-success float-right" %>
  </div>
<% end %>
