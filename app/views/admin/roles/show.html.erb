<div class="col-md-12">
  <div class="card card-outline card-primary">
    <div class="card-header">
      <h3 class="card-title"><%=t "role details" %></h3>
    </div>
    <div class="card-body">
      <p>
        <strong>Name:</strong>
        <%= @role.name %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @role.description %>
      </p>
      <%= link_to 'Back', admin_roles_path, class: "btn btn-secondary" %>
      <%= link_to 'Edit Role', edit_admin_role_path(@role), class: "btn btn-success float-right" %>
    </div>

  </div>
</div>