<div class="col-md-12">
  <div class="list-action mb-2">
    <%= link_to new_admin_role_path, class: "btn btn-primary", title: "Add Role" do %>
      <i class="fas fa-plus"></i>
      <%= t "Add Role"%>
    <% end %>
  </div>

  <div class="card card-outline card-primary">
    <div class="card-header">
      <h3 class="card-title"><%=t "roles list" %></h3>
      <div class="card-tools">
        
      </div>
    </div>
    <div class="card-body p-0">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @roles.each do |role| %>
            <tr>
              <td><%= role.name %></td>
              <td><%= role.description %></td>
              <td class="text-right">
                <%= link_to [:admin,role], class: "btn btn-primary btn-sm", title: "View Role" do %>
                  <i class="fas fa-search"></i>
                <% end %>
                <%= link_to edit_admin_role_path(role), class: "btn btn-info btn-sm", title: "Edit Role" do %>
                  <i class="fas fa-pencil-alt"></i>
                <% end %>
                <%= link_to [:admin,role], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm", title: "Delete Role" do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
